<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<property name="logback.appName" value="ZX-opmsystem-webapp" />   
	<property name="log.dir" value="${log.dir}"/>
	<property name="log.console.pattern" value="%X{logTraceId} %d{yyyy-MM-ddHH:mm:ss.SSS} %level %logger{10} %file:%line %class %method %msg%n" />
	<property name="log.console.level" value="warn" />
	<property name="log.rollingFile.pattern" value="%X{logTraceId} %d{yyyy-MM-ddHH:mm:ss.SSS} %level %logger{10} %file:%line %class %method %msg%n" />
	<property name="log.rollingFile.level" value="warn" />		
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
	   <encoder>
		 <pattern>${log.console.pattern}</pattern>
	   </encoder>
	   <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>${log.console.level}</level>
		</filter>
	</appender>
	<appender name="ROLLING_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${log.dir:-logs}/${logback.appName}/app.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${log.dir:-logs}/${logback.appName}/history/app.log.%d{yyyy-MM-dd}</FileNamePattern>
			<MaxHistory>30</MaxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>${log.rollingFile.pattern}</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>${log.rollingFile.level}</level>
		</filter>
	</appender>
	<appender name="dubboInvokePerfFlumeRpcAppender"
	   class="com.iflytek.edu.zx.logback.core.FlumeRpcAppender">
	   <encoder>
		 <pattern>dubboInvokePerfLog %X{logNodeName} %X{appName} %X{appPort} %X{logTraceId} %X{oldChainTraceId} %X{curChainTraceId} %X{sourceAppName} %d{yyyy-MM-ddHH:mm:ss} %msg%n</pattern>
		 <charset>UTF-8</charset>
	   </encoder>
	   <appType>service</appType>
	   <logType>dubboInvokePerf</logType>
	</appender>
	<appender name="normalFlumeRpcAppender"
	   class="com.iflytek.edu.zx.logback.core.FlumeRpcAppender">
	   <encoder>
		 <pattern>normalLog %X{logNodeName} %X{appName:-${logback.appName}} %X{appPort:-999} ${log.rollingFile.pattern}</pattern>
		 <charset>UTF-8</charset>
	   </encoder>
	   <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>${log.rollingFile.level}</level>
		</filter>
		<appType>service</appType>
	   <logType>normal</logType>
	</appender>
	<appender name="perfFlumeRpcAppender" class="com.iflytek.edu.zx.logback.core.FlumeRpcAppender">
	   <encoder>
		 <pattern>perfLog %X{logNodeName} %X{appName:-${logback.appName}} %X{appPort:-999} %X{logTraceId} %d{yyyy-MM-ddHH:mm:ss} %msg%n</pattern>
		 <charset>UTF-8</charset>
	   </encoder>
	   <appType>service</appType>
	   <logType>perf</logType>
	</appender>
	<appender name="smsFlumeRpcAppender" class="com.iflytek.edu.zx.logback.core.FlumeRpcAppender">
	   <encoder>
		 <pattern>SMSLog %X{logNodeName} %X{appName:-${logback.appName}} %X{appPort:-999} %X{logTraceId} %d{yyyy-MM-ddHH:mm:ss} %msg%n</pattern>
		 <charset>UTF-8</charset>
	   </encoder>
	   <appType>service</appType>
	   <logType>other</logType>
	</appender>
	
	<appender name="LimitFlumeAppender"
	class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${log.dir}/${logback.appName}/limitflume.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${log.dir}/${logback.appName}/history/limitflume.log.%d{yyyy-MM-dd}</FileNamePattern>
			<MaxHistory>30</MaxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{yyyy-MM-ddHH:mm:ss.SSS} - %msg%n</pattern>
		</encoder>
	</appender>
	
	<logger name="LimitFlumeLogger" level="info">
		<appender-ref ref="LimitFlumeAppender"/>
	</logger>
	
	<logger name="dubboInvokePerf" additivity="false" level="INFO" >
	   <appender-ref ref="dubboInvokePerfFlumeRpcAppender"/> 
	</logger>
	<logger name="perf" additivity="false" level="INFO" >
	   <appender-ref ref="perfFlumeRpcAppender"/> 
	</logger>
	<logger name="sms" additivity="false" level="INFO" >
	   <appender-ref ref="smsFlumeRpcAppender"/> 
	</logger>
	<logger name="org.jasig.cas.client" level="info"/>
	<logger name="org.apache.http" level="warn"/>
	<logger name="com.alibaba.dubbo" level="warn"/>
	<logger name="org.springframework" level="info"/>
	<logger name="org.apache.zookeeper.ClientCnxn" level="error"/>
	<logger name="com.github.diamond.client" level="error"/>
	<root level="DEBUG">
		<appender-ref ref="STDOUT"/>
		<appender-ref ref="ROLLING_FILE"/>
		<appender-ref ref="normalFlumeRpcAppender"/>
	</root>
</configuration> 