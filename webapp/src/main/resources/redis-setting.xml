<?xml version="1.0" encoding="utf-8" ?>
<redis>
	<serverlist>
		<server name="userinfo" role="master" cluster="sentinel"
			address="${redis.userinfo.sentinels}"
			set="${redis.userinfo.instanceSetName}" maxActive="50" maxIdle="10" testOnBorrow="false">
			<keylist>
				<key name="app用户缓存key" type="string" value="app:user:{userId}" />
				<key name="鉴权信息使用" type="string" value="authsession:{guid}"></key>
			</keylist>
		</server>
		<!-- UserSession -->
		<server name="session" role="master" cluster="sentinel"
			address="${redis.session.sentinels}" set="${redis.session.instanceSetName}"
			maxActive="${redis.session.pool.maxActive}" maxIdle="${redis.session.pool.maxIdle}"
			testOnBorrow="${redis.session.pool.testOnBorrow}" password="${redis.session.password}">
			<keylist>
				<key name="AppUser 序列化信息" type="string" value="stu:app:user:{userId}"></key>
				<key name="token" type="string" value="token:{token}"></key>
			</keylist>
		</server>
		<server name="autoMarkingStudent" role="master"
			cluster="${redis.automarkingstudent.cluster}" address="${redis.automarkingstudent.sentinels}"
			set="${redis.automarkingstudent.instanceSetName}" maxActive="${redis.automarkingstudent.pool.maxActive}"
			maxIdle="${redis.automarkingstudent.pool.maxIdle}" testOnBorrow="${redis.automarkingstudent.pool.testOnBorrow}">
			<keylist>
				<key name="BussinessLockKey" type="string" value="BLockK:{lockKey}" />
			</keylist>
		</server>
	</serverlist>
</redis>